#!/bin/bash

# Renk tanımları
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Banner
echo -e "${BLUE}"
echo "=================================="
echo "         NMAP TOOL v1.0"
echo "        ULYON CYBER TEAM"
echo "=================================="
echo -e "${NC}"

# Menü
echo -e "${GREEN}[1]${NC} Hızlı Tarama (Quick Scan)"
echo -e "${GREEN}[2]${NC} Tüm Portları Tara (Full Port Scan)"
echo -e "${GREEN}[3]${NC} Servis ve Versiyon Bilgisi (Service Detection)"
echo -e "${GREEN}[4]${NC} OS Tespiti (OS Detection)"
echo -e "${GREEN}[5]${NC} Aggressive Scan"
echo -e "${GREEN}[6]${NC} Script Scan"
echo -e "${GREEN}[7]${NC} Ping Tarama"
echo -e "${GREEN}[8]${NC} Belirli Portları Tara"
echo -e "${GREEN}[9]${NC} Tüm Nmap Komutlarını Listele"
echo -e "${GREEN}[10]${NC} Çıkış"

# Kullanıcıdan seçim al
echo -ne "${YELLOW}[*] Bir seçenek girin (1-10): ${NC}"
read choice

# Seçime göre işlem
case $choice in
    1)
        echo -ne "${YELLOW}Hedef IP girin: ${NC}"
        read target
        nmap -T4 -F $target
        ;;
    2)
        echo -ne "${YELLOW}Hedef IP girin: ${NC}"
        read target
        nmap -p- $target
        ;;
    3)
        echo -ne "${YELLOW}Hedef IP girin: ${NC}"
        read target
        nmap -sV $target
        ;;
    4)
        echo -ne "${YELLOW}Hedef IP girin: ${NC}"
        read target
        nmap -O $target
        ;;
    5)
        echo -ne "${YELLOW}Hedef IP girin: ${NC}"
        read target
        nmap -A $target
        ;;
    6)
        echo -ne "${YELLOW}Hedef IP girin: ${NC}"
        read target
        nmap -sC $target
        ;;
    7)
        echo -ne "${YELLOW}Hedef IP girin: ${NC}"
        read target
        nmap -sn $target
        ;;
    8)
        echo -ne "${YELLOW}Hedef IP girin: ${NC}"
        read target
        echo -ne "${YELLOW}Port numaralarını girin (örn: 21,22,80): ${NC}"
        read ports
        nmap -p $ports $target
        ;;
    9)
        echo -e "${BLUE}Nmap yardım sayfası açılıyor...${NC}"
        sleep 1
        nmap --help | less
        ;;
    10)
        echo -e "${GREEN}Çıkılıyor...${NC}"
        exit
        ;;
    *)
        echo -e "${RED}Geçersiz seçenek!${NC}"
        ;;
esac
